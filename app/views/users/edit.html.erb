  <div class = "container">
    <div>
      <% if @user.errors.any? %>
          <h3 style="color:red"><%= @user.errors.count %> errors prohibited this obj from being saved.</h3><br>
          <% @user.errors.full_messages.each do |message| %>
            <p style="color:red"><%= message %></p>
          <% end %>
        <% end %>
    </div>
   <div class = "row">
  	<div class = "col-sm-8">
  		<h2>User info</h2>
  		  <%= form_for(@user) do |f| %>
  		    <div calss = "field">
  		      <label>Name </label>
  		      <%= f.text_field :name %>
  		    </div>
  		    <div class = "field">
  		      <label>Image </label>
  		      <%=f.attachment_field :profile_image %>
  		    </div>
  		    <div class = "field">
  		      <label>Introduction</label>
  		      <%= f.text_area :introduction %>
  		    </div>
  		    <div class = "field">
  		      <%= f.submit "Update User" %>
  		    </div>
  		  <% end %>
    </div>