<div class = "container">
  <div>
      <% if @book.errors.any? %>
          <h3 style="color:red"><%= @book.errors.count %> errors prohibited this obj from being saved.</h3><br>
          <% @book.errors.full_messages.each do |message| %>
            <p style="color:red"><%= message %></p>
          <% end %>
        <% end %>
  </div>
	 	<div class = "row">
	 		<div class = "col-xs-3">
	 			<h2 class = "profile">User info</h2>
				<div class="user-image"><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "noimage.jpg" %></div>
				<br>

				<table class = "table">
				  <tbody>
				  	<tr></tr>
					<tr>
		  				<th>name</th>
		  				<th><%= current_user.name %></th>
					</tr>
					<tr>
		  				<th>introduction</th>
		  			    <th><%= current_user.introduction %></th>
					</tr>
				  </tbody>
				</table>

                <div class = "row">
                	<%= link_to '', edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
                </div>

				<h2 class = "new-post">New book</h2>

	  			<%= form_for(@book) do |f| %>

 	 			<div class = "input">
	    		 <h5 class = "input_content"><strong>Title</strong></h5>
	    		 <div class = "box"><%= f.text_field :title, class: "col-xs-12" %></div>
	 		    </div>

  				<div class = "input">
    			 <h5 class = "input_content"><strong>Opinion</strong></h5>
    			 <div class = "box"><%= f.text_area :body, class: "col-xs-12" %></div>
    			</div>

  				<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>

  				<% end %>
  			</div>

	 		<div class = "col-xs-9">

	 			<h2>Users</h2>
  				<table class = " table table-hover">
  				  <thead>
    				<tr>
	     				<th>image</th>
	     				<th>name</th>
	     				<th ></th>
    				</tr>
    			  </thead>

                  <tbody>

  		  			<% @users.each do |user| %>

    				<tr>
  	   					<td class = "contents"><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "noimage.jpg", size:'50x50' %></td>
  	   					<td class = "contents"><%= user.name %></td>
  	   					<td class = "contents"><%= link_to 'show', user_path(user.id), class: "text-muted" %></td>
    				</tr>
    	  			<% end %>
    	  		  </tbody>
        		</table>
	 		</div>
        </div>
</div>
